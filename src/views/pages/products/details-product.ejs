                                  d="M10 2.08954L8.82082 0.9104L5 4.73122L1.17918 0.9104L-5.15419e-08 2.08954L5 7.08954L10 2.08954Z"
                                  fill="#FFA336"></path>
                              </svg>
                            </button>
                            <input
                              type="text"
                              id="qtym"
                              name="quantity"
                              value="1"
                              maxlength="3"
                              class="form-control prd_quantity"
                              onkeypress="if ( isNaN(this.value + String.fromCharCode(event.keyCode) )) return false;"
                              onchange="if(this.value == 0)this.value=1;" />
                            <button
                              class="btn_num num_2 button button_qty"
                              onclick="var result = document.getElementById('qtym'); var qtypro = result.value; if( !isNaN( qtypro )) result.value++;return false;"
                              type="button">
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="10"
                                height="8"
                                viewBox="0 0 10 8"
                                fill="none">
                                <path
                                  d="M-5.15419e-08 5.91046L1.17918 7.0896L5 3.26878L8.82082 7.0896L10 5.91046L5 0.910458L-5.15419e-08 5.91046Z"
                                  fill="#FFA336"></path>
