<link href="/assets/css/product_style.css" rel="stylesheet" type="text/css" media="all" />
<div class="bodywrap">
  <%- include("../../components/bread-crumb") %>

  <section class="product layout-product" itemscope itemtype="https://schema.org/Product">
    <div class="container">
      <div class="details-product">
        <div class="row">
          <div class="product-detail-left product-images col-12 col-md-12 col-lg-6">
            <div class="product-image-block relative">
              <div class="swiper-container gallery-top">
                <div class="swiper-wrapper" id="lightgallery">
                  <% for (let i = 0; i < product.images.length; i++) { %>
                  <a class="swiper-slide" data-hash="<%= i %>" href="<%= product.images[i] %>">
                    <img
                      class="img-responsive mx-auto d-block swiper-lazy"
                      height="400"
                      width="400"
                      src="<%= product.images[i] %>"
                      alt="" />
                  </a>
                  <% } %>
                </div>
                <a
                  href="javascript:void(0)"
                  class="setWishlist btn-wishlist"
                  data-wish="<%= product?.id %>"
                  tabindex="0"
                  title="Add to wish">
                  <svg class="icon">
                    <use
                      xmlns:xlink="http://www.w3.org/1999/xlink"
                      xlink:href="#icon-wishlist"></use>
                  </svg>
                </a>
              </div>
              <div class="swiper-container gallery-thumbs">
                <div class="swiper-wrapper">
                  <% for (let i = 0; i < product.images.length; i++) { %>
                  <div class="swiper-slide" data-hash="<%= i %>">
                    <div class="p-100">
                      <img
                        class="swiper-lazy"
                        height="80"
                        width="80"
                        src="<%= product.images[i] %>"
                        alt="" />
                    </div>
                  </div>
                  <% } %>
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
              </div>
            </div>
          </div>

          <div class="col-12 col-md-12 col-lg-6">
            <div class="details-pro">
              <div class="details-pro">
                <h1 class="title-product"><%= product?.title %></h1>
                <div class="reviews_details_product">
                  <div
                    class="sapo-product-reviews-badge sapo-product-reviews-badge-detail"
                    data-id="31264840"></div>
                </div>
                <div class="inventory_quantity">
                  <div class="thump-break">
                    <span class="mb-break inventory">
                      <span class="stock-brand-title">Status:</span>
                      <span class="a-stock"> In stock </span>
                    </span>
                  </div>
                </div>
                <div class="price-box clearfix">
                  <span class="special-price">
                    <span class="price product-price"><%= product?.price %> $</span>
                    <meta itemprop="price" content="<%= product?.price %>" />
                    <meta itemprop="priceCurrency" content="$" />
                  </span>
                </div>
                <form
                  enctype="multipart/form-data"
                  data-cart-form=""
                  id="add-to-cart-form"
                  action="/cart/add"
                  method="post"
                  class="form-inline">
                  <div class="form-product">
                    <div class="box-variant clearfix d-none">
                      <input type="hidden" id="one_variant" name="variantId" value="90208306" />
                    </div>
                    <div class="clearfix form-group">
                      <div class="flex-quantity">
                        <div class="custom custom-btn-number show">
                          <label class="sl section">Amount:</label>
                          <div class="input_number_product form-control">
                            <button
                              class="btn_num num_1 button button_qty"
                              onclick="var result = document.getElementById('qtym');var qtypro = result.value;if (!isNaN(qtypro) && qtypro > 1) {result.value--;}return false;"
                              type="button">
