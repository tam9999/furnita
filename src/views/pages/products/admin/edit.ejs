<div class="bodywrap">
  <div class="layout-collection">
    <%- include("../../../components/bread-crumb") %>

    <div class="container">
      <div class="block-collection">
        <div class="category-products">
          <div class="btn-group">
            <button
              type="button"
              class="btn btn-info dropdown-toggle"
              style="background-color: #75aebd"
              data-mdb-toggle="dropdown"
              aria-expanded="false">
              Product
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/admin/product">Data Tables</a></li>
              <li><a class="dropdown-item" href="/product/create">Create Product</a></li>
            </ul>
          </div>

          <div class="btn-group">
            <button
              type="button"
              class="btn btn-info dropdown-toggle"
              style="background-color: #b0b486"
              data-mdb-toggle="dropdown"
              aria-expanded="false">
              New
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/admin/new">Data Tables</a></li>
              <li><a class="dropdown-item" href="/new/create">Create New</a></li>
            </ul>
          </div>

          <div
            style="margin-top: 20px"
            class="products-view products-view-grid list_hover_pro"
            role="alert">
            <h1
              class="title-head-contact a-left"
              style="font-size: 30px; line-height: 30px; margin-bottom: 20px">
              <strong>Edit Product</strong>
            </h1>
            <div class="layout-contact">
              <div class="container">
                <div class="row">
                  <div class="form-contact">
                    <form action="/product/edit/<%= data.id %>" method="post">
                      <% if (locals.errors) { for (const error of errors) { %>
                      <div class="alert alert-danger" role="alert"><%= error.msg %></div>
                      <% }} else if (locals.status) { %>
                      <div class="alert alert-success" role="alert">Edit product success</div>
                      <% } %>

                      <div class="group_contact">
                        <input
                          placeholder="Product code"
                          type="text"
                          value="<%= data.id %>"
                          class="form-control form-control-lg"
                          required=""
                          name="id" />

                        <input
                          placeholder="Title"
                          type="text"
                          value="<%= data.title %>"
                          class="form-control form-control-lg"
                          required=""
                          name="title" />

                        <input
                          placeholder="Category"
                          type="text"
                          value="<%= data.category %>"
                          class="form-control form-control-lg"
                          name="category" />

                        <input
                          placeholder="Material"
                          type="text"
                          value="<%= data.material %>"
                          class="form-control form-control-lg"
                          name="material" />

                        <input
                          placeholder="Size"
                          type="text"
                          value="<%= data.size %>"
                          class="form-control form-control-lg"
                          name="size" />

                        <textarea
                          placeholder="Description"
                          name="description"
                          class="form-control content-area form-control-lg"
                          rows="5">
<%= data.description %></textarea
                        >

                        <button type="submit" class="btn-create">Edit</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="opacity_sidebar"></div>
  <script>
    var colName = 'All products'

    var colId = 0

    var selectedViewData = 'data'
  </script>
  <script src="/assets/col.js" type="text/javascript"></script>
</div>

<link rel="preload" as="script" href="/assets/main.js" />
<link href="/assets/css/mdb.min.css" rel="stylesheet" />
<script type="text/javascript" src="/assets/js/mdb.min.js"></script>
