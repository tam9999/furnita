<section class="bread-crumb" style="background-color: #e2d0c0">
  <div class="container">
    <div class="title-bread-crumb"><%= title %></div>
    <ul class="breadcrumb">
      <li class="home">
        <a href="/"><span>Home</span></a>
        <span class="mr_lr"
          >&nbsp;<svg
            aria-hidden="true"
            focusable="false"
            data-prefix="fas"
            data-icon="chevron-right"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 320 512"
            class="svg-inline--fa fa-chevron-right fa-w-10">
            <path
              fill="currentColor"
              d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
              class=""></path></svg
          >&nbsp;</span
        >
      </li>

      <% if (locals.title_menu) { %>
      <li>
        <a class="changeurl" href="/<%= toLowerCase(title_menu) %>">
          <span><%= title_menu %></span>
        </a>
        <span class="mr_lr"
          >&nbsp;<svg
            aria-hidden="true"
            focusable="false"
            data-prefix="fas"
            data-icon="chevron-right"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 320 512"
            class="svg-inline--fa fa-chevron-right fa-w-10">
            <path
              fill="currentColor"
              d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
              class=""></path></svg
          >&nbsp;</span
        >
      </li>
      <% } if (locals.category || locals.product) { %>
      <li>
        <a class="changeurl" href="/product"> <span>Product</span></a>
        <span class="mr_lr"
          >&nbsp;<svg
            aria-hidden="true"
            focusable="false"
            data-prefix="fas"
            data-icon="chevron-right"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 320 512"
            class="svg-inline--fa fa-chevron-right fa-w-10">
            <path
              fill="currentColor"
              d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
              class=""></path></svg
          >&nbsp;</span
        >
      </li>
      <% } if (locals.product) { %>
      <li>
        <a class="changeurl" href="<%= url %>"> <span><%= product.category %></span></a>
        <span class="mr_lr"
          >&nbsp;<svg
            aria-hidden="true"
            focusable="false"
            data-prefix="fas"
            data-icon="chevron-right"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 320 512"
            class="svg-inline--fa fa-chevron-right fa-w-10">
            <path
              fill="currentColor"
              d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
              class=""></path></svg
          >&nbsp;</span
        >
      </li>

      <li>
        <a class="changeurl" href="<%= `${url}&item=${urlItem}` %>"> <span><%= item %></span></a>
        <span class="mr_lr"
          >&nbsp;<svg
            aria-hidden="true"
            focusable="false"
            data-prefix="fas"
            data-icon="chevron-right"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 320 512"
            class="svg-inline--fa fa-chevron-right fa-w-10">
            <path
              fill="currentColor"
              d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
              class=""></path></svg
          >&nbsp;</span
        >
      </li>
      <% } if (locals.product) { %>
      <li>
        <strong><span><%= product.id %></span></strong>
      </li>
      <% } else if (locals.item) { %>
      <li>
        <a class="changeurl" href="<%= url %>"> <span><%= category %></span></a>
        <span class="mr_lr"
          >&nbsp;<svg
            aria-hidden="true"
            focusable="false"
            data-prefix="fas"
            data-icon="chevron-right"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 320 512"
            class="svg-inline--fa fa-chevron-right fa-w-10">
            <path
              fill="currentColor"
              d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
              class=""></path></svg
          >&nbsp;</span
        >
      </li>

      <li>
        <strong><span><%= item %></span></strong>
      </li>
      <% } else { %>
      <li>
        <strong><span><%= title %></span></strong>
      </li>
      <% } %>
    </ul>
    <div class="danhmuc-breadcrumb">
      <section class="section_danhmuc">
        <div class="container">
          <div class="danhmuc-swiper swiper-container">
            <div class="swiper-wrapper">
              <% locals?.categoriesData.forEach((categoryItem) => { %>
              <div class="swiper-slide">
                <a href="<%= categoryItem.url %>" title="<%= categoryItem.name %>"></a>
                <div class="danhmuc-thumb">
                  <img
                    width="200"
                    height="200"
                    class="lazyload"
                    src="<%= categoryItem.imageSrc %>"
                    alt="<%= categoryItem.name %>" />
                  <span class="image-shadow"></span>
                </div>
                <div class="danhmuc-info">
                  <h3>
                    <svg
                      version="1.1"
                      id="Layer_1"
                      xmlns="http://www.w3.org/2000/svg"
                      xmlns:xlink="http://www.w3.org/1999/xlink"
                      x="0px"
                      y="0px"
                      viewBox="0 0 64 42"
                      style="enable-background: new 0 0 64 42; width: 16px; height: 16px"
                      xml:space="preserve">
                      <style type="text/css">
                        .st0 {
                          fill: #ce1126;
                        }
                        .st1 {
                          fill: #fcd116;
                        }
                      </style>
                      <path
                        id="Rounded_Rectangle_7_copy_1_"
                        class="st0"
                        d="M5.8,0h52.3C61.4,0,64,2.6,64,5.7v30.6c0,3.2-2.6,5.7-5.8,5.7H5.8
                                    C2.6,42,0,39.4,0,36.3V5.7C0,2.6,2.6,0,5.8,0z" />
                      <polygon
                        class="st1"
                        points="32,5.1 35.9,17.3 48.7,17.3 38.4,24.7 42.3,36.9 32,29.4 21.7,36.9 25.6,24.7 15.3,17.3 28.1,17.3 " />
                    </svg>
                    <%= categoryItem.name %>
                  </h3>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </section>
      <script>
        var swiperdanhmuc = new Swiper('.danhmuc-swiper', {
          slidesPerView: 3,
          loop: false,
          grabCursor: true,
          roundLengths: true,
          slideToClickedSlide: false,
          slidesPerColumn: 1,
          spaceBetween: 30,
          autoplay: false,
          breakpoints: {
            300: {
              slidesPerView: 2,
            },
            500: {
              slidesPerView: 2,
            },
            640: {
              slidesPerView: 2,
            },
            768: {
              slidesPerView: 4,
            },
            991: {
              slidesPerView: 5,
            },
            1200: {
              slidesPerView: 5,
            },
          },
        })
      </script>
    </div>
  </div>
</section>
