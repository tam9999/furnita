                  <img
                    width="200"
                    height="200"
                    class="lazyload"
                    src="/assets/danhmuc_3.jpg"
                    alt="Kitchen ware" />
                  <span class="image-shadow"></span>
                </div>
                <div class="danhmuc-info">
                  <h3>Kitchen ware</h3>
                  <span>+ 0 products</span>
                </div>
              </div>

              <div class="swiper-slide">
                <a href="tra-ca-phe.html" title="Lights"></a>
                <div class="danhmuc-thumb">
                  <img
                    width="200"
                    height="200"
                    class="lazyload"
                    src="/assets/danhmuc_4.jpg"
                    alt="Lights" />
                  <span class="image-shadow"></span>
                </div>
                <div class="danhmuc-info">
                  <h3>Lights</h3>
                  <span>+ 21 products</span>
                </div>
              </div>

              <div class="swiper-slide">
                <a href="phu-kien-ban-an.html" title="Handbags"></a>
                <div class="danhmuc-thumb">
                  <img
                    width="200"
                    height="200"
                    class="lazyload"
                    src="/assets/danhmuc_5.jpg"
                    alt="Handbags" />
                  <span class="image-shadow"></span>
                </div>
                <div class="danhmuc-info">
                  <h3>Handbags</h3>
                  <span>+ 0 products</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <script>
        var swiperdanhmuc = new Swiper('.danhmuc-swiper', {
          slidesPerView: 3,
          loop: false,
          grabCursor: true,
          roundLengths: true,
          slideToClickedSlide: false,
          slidesPerColumn: 1,
          spaceBetween: 30,
          autoplay: false,
          breakpoints: {
            300: {
              slidesPerView: 2,
            },
            500: {
              slidesPerView: 2,
            },
            640: {
              slidesPerView: 2,
            },
            768: {
              slidesPerView: 4,
            },
            991: {
              slidesPerView: 5,
            },
            1200: {
              slidesPerView: 5,
            },
          },
        })
      </script>
    </div>
  </div>
</section>
